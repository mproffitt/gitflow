GITFLOW_VERSION=$(git tag | grep '[0-9].[0-9].*' | tail -n1);

versionCompare () {
    if [[ $1 == $2 ]]
    then
        return 0
    fi
    local IFS=.
    local i ver1=($1) ver2=($2)
    # fill empty fields in ver1 with zeros
    for ((i=${#ver1[@]}; i<${#ver2[@]}; i++))
    do
        ver1[i]=0
    done
    for ((i=0; i<${#ver1[@]}; i++))
    do
        if [[ -z ${ver2[i]} ]]
        then
            # fill empty fields in ver2 with zeros
            ver2[i]=0
        fi
        if ((10#${ver1[i]} > 10#${ver2[i]}))
        then
            return 1
        fi
        if ((10#${ver1[i]} < 10#${ver2[i]}))
        then
            return 2
        fi
    done
    return 0
}

testvercomp () {
    versionCompare $1 $2
    case $? in
        0) op='=';;
        1) op='>';;
        2) op='<';;
    esac
    if [[ $op != $3 ]]
    then
        return 0;
    else
        return 1;
    fi
}

getVersion() {
    latest='';
    versions=$(git tag | grep '[0-9].[0-9].*');
    for version in $versions; do
        testvercomp $GITFLOW_VERSION $version '<';
        if [ $? -eq 1 ] ; then
            GITFLOW_VERSION=$version;
        fi
    done;
}

init() {
    return 0;
}

usage() {
	echo "usage: git flow version"
}

cmd_default() {
    getVersion;
	pinfo "Current version of GitFlow is: $GITFLOW_VERSION"
}

cmd_init() {
    cmd_default;
}

cmd_help() {
	usage
	exit 0
}
